#extend("base")

#export("head") {
	<title>Tournament</title>

    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,700,300" rel="stylesheet">
	<link rel="stylesheet" href="/styles/app.css">
}

#export("body") {
  #raw() {
      <div class="container-fluid">
        <h3>Teams</h3>
      <table class="table table-striped">
        <thead>
          <tr>
						<th>#</th>
            <th>Team</th>
						<th>Members</th>
            <th>Score</th>
						<th></th>
          </tr>
        </thead>
        <tbody>
  }
  #loop(teams, "team") {
          <tr>
						<td>#(team.position)</td>
            <td><strong>#(team.name)</strong></td>
						<td>#(team.memberNames)</td>
            <td>#(team.score)</td>
						<td><a class="btn btn-default" href="/teams/#(team.id)" role="button">View details</a></td>
          </tr>
  }
  #raw() {
        </tbody>
      </table>
    </div>
  }
}
